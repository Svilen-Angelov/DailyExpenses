<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/drawer_single_icon_image_view"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/drawer_single_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/drawer_single_icon_image_view"
        android:paddingRight="10dp"
        android:textSize="21sp"
        android:textColor="#FFFFFF" />
    
    <View
    android:id="@+id/viewLineDark"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#111111"
    android:layout_above="@+id/viewLineLight"/>
    
    <View
    android:id="@+id/viewLineLight"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#8c8c8c"/>
    

</RelativeLayout>